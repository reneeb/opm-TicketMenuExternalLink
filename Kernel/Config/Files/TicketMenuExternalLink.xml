<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Config">
    <ConfigItem Name="Frontend::Output::FilterElementPost###TicketMenuExternalLink" Required="0" Valid="1">
        <Description Translatable="1">Module to show link to external site in ticket menu.</Description>
        <Group>TicketMenuExternalLink</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::TicketMenuExternalLink</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketZoom">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterElementPost###TicketMenuExternalLinkOverview" Required="0" Valid="1">
        <Description Translatable="1">Module to show link to external site in ticket menu (overview "large").</Description>
        <Group>TicketMenuExternalLink</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::TicketMenuExternalLinkOverview</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketOverviewPreview">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ExternalLink::URL" Required="0" Valid="1">
        <Description Translatable="1">URL of the link.</Description>
        <Group>TicketMenuExternalLink</Group>
        <SubGroup>TicketLink</SubGroup>
        <Setting>
            <String Regex="">http://perl-services.de/test.pl?ticket_id=[% Data.TicketID | uri %]</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ExternalLink::LinkName" Required="0" Valid="1">
        <Description Translatable="1">Name of the link.</Description>
        <Group>TicketMenuExternalLink</Group>
        <SubGroup>TicketLink</SubGroup>
        <Setting>
            <String Regex="">Perl-Services</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="ExternalLink::Attributes" Required="0" Valid="1">
        <Description Translatable="1">Attributes for the &lt;a&gt;-tag.</Description>
        <Group>TicketMenuExternalLink</Group>
        <SubGroup>TicketLink</SubGroup>
        <Setting>
            <Hash>
                <Item Key="onmouseover">window.status=[% Translate("Perl-Services") | JSON %]</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
